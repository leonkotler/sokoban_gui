<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    <class name="view.Player" table="PLAYERS">
        <meta attribute="class-description">This class contains player score data</meta>
        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>
        <set name = "scores" cascade="all">
           <key column="player_id"/>
            <one-to-many class = "view.Score"/>
        </set>
        <property name="name" column="name" type="string"/>
    </class>

    <class name = "view.Score" table = "SCORES">
        <meta attribute="class-description">This class contains the scores records</meta>
        <id name = "id" type = "int" column="id">
            <generator class="native"/>
        </id>
        <property name="time" column="time" type="time"/>
        <property name="steps" column="steps" type="integer"/>
    </class>
</hibernate-mapping>